####### Implicit rules

.SUFFIXES: .o .c .cpp .cc .cxx .C

.cpp.o:
	$(CXX) -c $(CXXFLAGS) $(INCPATH) -o "$@" "$<"

.cc.o:
	$(CXX) -c $(CXXFLAGS) $(INCPATH) -o "$@" "$<"

.cxx.o:
	$(CXX) -c $(CXXFLAGS) $(INCPATH) -o "$@" "$<"

.C.o:
	$(CXX) -c $(CXXFLAGS) $(INCPATH) -o "$@" "$<"

.c.o:
	$(CC) -c $(CFLAGS) $(INCPATH) -o "$@" "$<"

####### Build rules

all: Makefile $(TARGET)

$(TARGET):  $(OBJECTS)  ../../mortsrc/libmort.a ../../mortsrc/mortgl/libmortgl.a
	$(LINK) $(LFLAGS) -o $(TARGET) $(OBJECTS) $(OBJCOMP) $(LIBS)
	cp $(TARGET) $(BINDIR)


clean: 
	-$(DEL_FILE) $(OBJECTS)
	-$(DEL_FILE) *~ core *.core



####### Compile

glarea.o: glarea.cpp 
	$(CXX) -c $(CXXFLAGS) $(INCPATH) -o glarea.o glarea.cpp

mainwin.o: mainwin.cpp mainwin.hpp
	$(CXX) -c $(CXXFLAGS) $(INCPATH) -o mainwin.o mainwin.cpp

status.o: status.cpp status.hpp
	$(CXX) -c $(CXXFLAGS) $(INCPATH) -o status.o status.cpp

####### Install

install:  $(TARGET)

